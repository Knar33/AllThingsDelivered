@model AllThingsDelivered.Models.SignIn
@{
    ViewBag.Title = "Sign In";
}
<div class="row">
    @if (TempData["PasswordReset"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["PasswordReset"]</p>
        </div>
    }
    @if (TempData["ConfirmEmail"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["ConfirmEmail"]</p>
        </div>
    }
    @if (TempData["SignIn"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["SignIn"]</p>
        </div>
    }

    @if(ViewBag.Errors != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach(string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    @using (Html.BeginForm("", "", "", new { @class = "table table-compact"))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.username, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.password)
        </div>
        <div class="form-group">
            
@Html.CheckBoxFor(m => m.rememberMe) @Html.LabelFor(m => m.rememberMe, new { @class = "control-label" })
            @Html.ValidationMessageFor(m => m.rememberMe)
        </div>
        <input type="submit" class="btn btn-default" />
        <br /><br />
        @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-primary" })
        <br />
        @Html.ActionLink("Forgot Password", "ForgotPassword", null, new { @class = "btn btn-primary" })
    }
</div>