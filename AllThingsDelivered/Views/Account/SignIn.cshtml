@{
    ViewBag.Title = "Sign In";
}
<div class="row">
    @if (TempData["PasswordReset"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["PasswordReset"]</p>
        </div>
    }
    @if (TempData["ConfirmEmail"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["ConfirmEmail"]</p>
        </div>
    }
    @if (TempData["SignIn"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["SignIn"]</p>
        </div>
    }

    @if(ViewBag.Errors != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach(string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            <label for="username" class="control-label">Username</label>
            @Html.TextBox("username", "", new { placeholder = "username or email address", @class = "form-control" })
        </div>
        <div cass="form-group">
            <label for="password" class="control-label">Password</label>
            @Html.Password("password", "", new { placeholder = "password", @class="form-control" })
        </div>
        <div class="form-group">
            @Html.CheckBox("rememberMe", false)
            <label for="rememberMe">Stay Signed In</label>
        </div>
        <input type="submit" class="btn btn-default" />

        @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Forgot Password", "ForgotPassword", null, new { @class = "btn btn-primary" })
    }
</div>